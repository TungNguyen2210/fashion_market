<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISSIONS CƠ BẢN -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- PERMISSIONS CHO LOCATION -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- PERMISSIONS CHO PAYPAL -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- HARDWARE FEATURES -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTrangSuc"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- ✅ MAIN ACTIVITY - LAUNCHER -->
        <activity
            android:name="com.example.tech.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppTrangSuc">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ CHECKOUT ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ CHI TIẾT SẢN PHẨM ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.ChiTietSanPhamActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ FORGOT PASSWORD ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ GIỎ HÀNG ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.GioHang"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ LOGIN ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ NEWS DETAIL ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.NewsDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ ORDER CONFIRMATION ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.OrderConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ✅ SIGN UP ACTIVITY -->
        <activity
            android:name="com.example.tech.activity.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.AppTrangSuc" />

        <!-- ========== PAYPAL SDK (CHỈ CÁC ACTIVITY CẦN THIẾT) ========== -->

        <!-- ✅ PAYPAL SERVICE -->
        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <!-- ✅ PAYPAL PAYMENT ACTIVITY - MAIN -->
        <activity
            android:name="com.paypal.android.sdk.payments.PaymentActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- ✅ PAYPAL LOGIN ACTIVITY -->
        <activity
            android:name="com.paypal.android.sdk.payments.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- ✅ PAYPAL PAYMENT METHOD ACTIVITY -->
        <activity
            android:name="com.paypal.android.sdk.payments.PaymentMethodActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- ✅ PAYPAL PAYMENT CONFIRMATION ACTIVITY -->
        <activity
            android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    </application>
</manifest>